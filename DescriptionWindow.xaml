<Window x:Class="fractal_generator.DescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fractal_generator"
        mc:Ignorable="d"
        Title="DescriptionWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
        <TextBlock Name="title"></TextBlock> <!-- this will be the header of the page-->
        <TextBlock Name="description"></TextBlock>

        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Image Name="img1" Height="200" Width="200"></Image>
            <Image Name="img2" Height="200" Width="200"></Image>
            <Image Name="img3" Height="200" Width="200"></Image>
        </StackPanel>
    </Grid>
</Window>
