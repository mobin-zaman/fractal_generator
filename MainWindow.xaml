<Window x:Class="Fractal_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractal_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Border Background="White"/>
        <Border Grid.Row="1" Background="Gray"/>
        <TextBlock Grid.Row="1" Text="Fractal" HorizontalAlignment="Left" VerticalAlignment="Center"> <Bold>Fractal</Bold></TextBlock>

        <Border Background="White"/>
        <Border Grid.Row="2" Background="Gray"/>
        <TextBlock Grid.Row="2" Text="Mardelbrot Set" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>

    </Grid>
</Window>
